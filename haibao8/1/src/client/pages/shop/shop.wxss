swiper {
    width: 100%;
    height: 340rpx;
}

swiper image {
    display: block;
    width: 100%;
    height: 100%;
}

.tag-list {
    display: flex;
    white-space: nowrap;
    height: 70rpx;
    width: 100%;
}

.tag-item {
    height: 50rpx;
    margin: 10rpx;
    padding: 0;
    display: inline-block;
}

.tag-btn {
    background-color: white;
    color: #6666FF;
    font-size: 30rpx;
    font-weight: bold;
    padding-left: 10rpx;
    padding-right: 10rpx;
    height: 50rpx;
    border: 1px solid #9999FF;
    border-radius: 15px;
    line-height: 1.5;
}

.shop-item {
    overflow: hidden;
    padding: 30rpx;
}

.shop-logo {
    float: left;
    width: 190rpx;
    height: 190rpx;
}

.shop-body {
    margin-left: 220rpx;
    overflow: hidden;
}

.shop-name {
    color: #212121;
    font-size: 36rpx;
    line-height: 1;
}

.shop-desc {
    color: #9a9a9a;
    font-size: 34rpx;
    line-height: 1;
}

.shop-address {
    color: #9a9a9a;
    font-size: 34rpx;
    line-height: 1;
}

.shop-join-btn {
    width: 200rpx;
    height: 50rpx;
    background-color: rgb(255, 0, 0);
    position: fixed;
    border-radius: 15rpx;
    bottom: 60rpx;
    right: 10rpx;
    z-index: 1000;
    /* font-size: 25rpx; */
    line-height: 1.5;
}