page {
    font-family: -apple-system-font, "Helvetica Neue", sans-serif;
}

.login-head {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    background-color: rgb(254, 235, 218);
}

.login-titel {
    margin: 10rpx;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20rpx;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    overflow: hidden;
    border-radius: 100%;
    margin-bottom: 10rpx;
}

.userinfo-nickname {
    font-size: 36rpx;
    color: #808085;
}

.login-btn {
    background-color: rgb(25, 204, 78);
    color: white;
    height: 50rpx;
    border-radius: 15rpx;
    line-height: 1.5;
    position: absolute;
    bottom: 20px;
}

.login-authorize {
    height: 840rpx;
    align-self: stretch;
    margin: auto 0;
}

.flipper {
    transition: 0.6s;
    transform-style: preserve-3d;
    padding: 15rpx 45rpx;
}

.front {
    backface-visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 15rpx 45rpx;
    width: 514rpx;
    height: 750rpx;
    background-color: #f3f3f3;
    background-size: 100%;
    overflow: hidden;
    border-radius: 20rpx 20rpx 20rpx 20rpx;
    box-shadow: 2rpx 4rpx 24rpx #686868;
    z-index: 2;
}

.back {
    backface-visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 15rpx 45rpx;
    width: 514rpx;
    height: 750rpx;
    background-color: #f3f3f3;
    background-size: 100%;
    overflow: hidden;
    border-radius: 20rpx 20rpx 20rpx 20rpx;
    box-shadow: 2rpx 4rpx 24rpx #686868;
    transform: rotateY(180deg);
}