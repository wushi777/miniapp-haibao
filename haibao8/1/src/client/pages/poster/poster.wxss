@import "template/posterlist-tmpl/posterlist.wxss";
swiper {
    width: 100%;
    height: 340rpx;
}

swiper image {
    display: block;
    width: 100%;
    height: 100%;
}

.tag-list {
    display: flex;
    white-space: nowrap;
    height: 70rpx;
    width: 100%;
}

.tag-item {
    height: 50rpx;
    margin: 10rpx;
    padding: 0;
    display: inline-block;
}

.tag-btn {
    background-color: white;
    color: #6666FF;
    font-size: 30rpx;
    font-weight: bold;
    padding-left: 10rpx;
    padding-right: 10rpx;
    height: 50rpx;
    border: 1px solid #9999FF;
    border-radius: 20rpx;
    line-height: 1.5;
}

.poster-all-container {
    background-color: #f2f2f2;
}