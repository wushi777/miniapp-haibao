.left_menu_item {
    color: #7c7c7c;
    font-size: 26rpx;
    width: 100%;
    padding: 20rpx 0;
    text-align: center;
    border-bottom: 1rpx solid #fff;
}

.right_content {
    width: 75%;
    position: fixed;
    right: 0;
    top: 0;
    height: 100%;
    overflow-y: scroll;
    overflow-x: hidden;
}


