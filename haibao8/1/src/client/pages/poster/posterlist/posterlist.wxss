@import "../template/postgrid-tmpl/postgrid.wxss";
.left_menu {
    position: fixed;
    width: 25%;
    height: 100%;
    overflow: hidden;
}

.left_menu_list {
    width: 100%;
    height: 100%;
    overflow-y: scroll;
    background: #eee;
}

.left_menu .active {
    background: #fff;
    color: #000;
    transition: all 0.5s;
    animation: show 0.5s;
}

@keyframes show {
    0% {
        opacity: 0;
        transform: rotateY(180deg);
    }
    100% {
        opacity: 1;
        transform: rotateY(360deg);
    }
}

