.tipdialog-gray-screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: black;
    opacity: 0.6;
    overflow: hidden;
    z-index: 1000;
}

.tipdialog-content {
    background-color: white;
    height: 250rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
}

.tipdialog-content-btn1 {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.tipdialog-content-btn2 {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.tipdialog-content-btn1-img {
    width: 80rpx;
    height: 80rpx;
}

.tipdialog-content-btn2-img {
    width: 80rpx;
    height: 80rpx;
}