.tipinput-gray-screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  /* background-color: black;
  opacity: 0.6; */
  overflow: hidden;
  z-index: 1000;
}

.tipinput-content {
  background-color: #F3F3F3;
  height: 350rpx;
  width: 600rpx;
  position: fixed;
  top: 100rpx;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 15rpx;  
  z-index: 2000;
}

.tipinput-content-head {
  width: 100%;
  height: 100rpx;
  padding: 0;
  margin: 0;
  background-color: white;
  border-radius: 15rpx;  
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.tipinput-content-close {
  width: 30rpx;
  height: 30rpx;
  margin: 30rpx;
}

.tipinput-content-title {
  font-weight: bold;
  margin: 30rpx 0 30rpx 0;
}

.tipinput-content-maxlengthtip {
  font-size: 26rpx;
  color: red;
}

.tipinput-content-btn-container {
  margin: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;  
}

.tipinput-content-clear {
  width: 80rpx;
  height: 40rpx;
  margin-right: 10rpx;
  background-color: rgb(0, 202, 252);
  border-radius: 30rpx;
  text-align: center;
  color: white;
  font-size: 26rpx;
}

.tipinput-content-ok {
  width: 80rpx;
  height: 40rpx;
  background-color: rgb(0, 202, 252);
  border-radius: 30rpx;
  text-align: center;
  color: white;
  font-size: 26rpx;
}

.tipinput-text-container {
  width: 100%;
  margin-top: 2rpx;
  padding:20rpx;
  height: 250rpx;
  background-color: white;
  border-radius: 15rpx;
  box-sizing: border-box;  
}

.tipinput-text {
  width: 100%;
  height: 100%;
  background-color: #F3F3F3;
}